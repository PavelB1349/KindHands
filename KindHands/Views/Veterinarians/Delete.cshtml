@model KindHands.Models.Veterinarian

@{
    ViewData["Title"] = "Удалить ветеринара";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h3>Вы уверены, что хотите удалить этого ветеринара?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatronumicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatronumicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speciality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Speciality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clinic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clinic.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>

    <form asp-action="Delete" class="delete_admin">
        <input type="hidden" asp-for="Id" />
        @if (User.IsInRole("ROLE_ADMIN") || User.IsInRole("ROLE_MODERATOR"))
        {
            <input type="submit" value="Да, удалить" class="btn_delete btn_delete_bg" />
        }
        <a asp-action="Index" class="btn_admin_details_back btn_delete">Вернуться назад</a>
    </form>
</div>
