@model KindHands.Models.User
@{
    ViewData["Title"] = "Удаление пользователя";
}



@if (User.IsInRole("ROLE_ADMIN"))
{
    <h1>@ViewData["Title"]</h1>
    <hr />

    <h3>Вы уверены, что хотите удалить выбранного пользователя?</h3>
    <div>
        <dl class="row">        
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>

        <form asp-action="Delete" class="delete_admin">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Да, удалить" class="btn_delete btn_delete_bg" />
            <button class="btn_admin_details btn_admin_details_back btn_dermish" type="button" onclick="history.back();">Вернуться назад</button>
        </form>
    </div>
}
